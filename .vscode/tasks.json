{
  "tasks": [
    {
      "type": "shell",
      "label": "g++.exe build active file",
      "command": "/usr/bin/g++",
      "args": [
        "-Wall",
        "-g",
        "-o",
        "${fileBasenameNoExtension}.exe",
        "${fileBasenameNoExtension}.cpp",
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
  "version": "2.0.0"
}